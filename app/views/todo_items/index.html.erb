<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th>Completed</th>
      <th>Todolist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.name %></td>
        <td><%= todo_item.details %></td>
        <td><%= todo_item.completed %></td>
        <td><%= todo_item.todo_list_id %></td>
<!--        <td><%#= link_to 'Show', todo_item %></td>-->
<!--        <td><%#= link_to 'Edit', edit_todo_item_path(todo_item) %></td>-->
<!--        <td><%#= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="flex-col inline-flex space-y-3.5 mt-20">
  <v-todo-list :todos="<%= @todo_items.to_json %>"></v-todo-list>
</div>

